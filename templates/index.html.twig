{% extends "globals/base.html.twig" %}

{% block metadescription %}
  {% if meta is not empty %}{{ meta.description }}{% else %}{{ parent() }}{% endif %}
{% endblock %}

{% block keywords %}
  {% if meta is not empty %}{{ meta.keywords }}{% else %}{{ parent() }}{% endif %}
{% endblock %}

{% block favicon %}
  {% if settings.favicon is defined %}<link rel="shortcut icon" href="/{{ settings.favicon }}">{% else %}{{ parent() }}{% endif %}
{% endblock %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block content %}
  {% for key, block in blocks if block.status == 1 %}
    {% include 'blocks/'~key~'.html.twig' ignore missing with {(key): block} %}
  {% endfor %}
{% endblock %}
